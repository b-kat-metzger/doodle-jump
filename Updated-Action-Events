#pragma once
#include "SFML/Graphics.hpp"
using namespace sf;
class Events : public BaseObj
{
private:
public:
	void movementInput(BaseObj obj1, BaseObj obj2) {//user presses left and right arrows, changes direction of where the player is going
			Vector2f pos;
			int x = 0, y = 0, yPrime = 0;
			yPrime += 0.3;
			pos.y += yPrime;
			while (pos.y > 1000) {
				yPrime = -5;
			}
			obj1.setPosition(pos.x, pos.y);
			if (Keyboard::isKeyPressed(Keyboard::Left)) {
				x -= 5;
			}
			else if (Keyboard::isKeyPressed(Keyboard::Right)) {
				x += 5;
			}
	}
	void shoot(BaseObj obj1, BaseObj obj2) {//user presses space bar, sprite is changed to face upward, bullet sprite is loaded and moves upwards
		int y = obj2.getPositionY(), yPrime = 0;
		if (Keyboard::isKeyPressed(Keyboard::Space)) {
			yPrime = 10;
			while (obj1.getPositionY() < 1000) {
				y += yPrime;
				obj1.setPosition(obj2.getPositionX(), y);
			}
		}
	}
};

class Actions
{
private:
public:
	void inBounds(BaseObj obj) {
		if (obj.getPositionX() > 1000) {
			obj.setPosition(0,obj.getPositionY());
		}
		else if (obj.getPositionX() < 0) {
			obj.setPosition(1000, obj.getPositionY());
		}
	}
	bool collisionDetection(BaseObj obj1, BaseObj obj2) {
		return obj1.intersects(obj2.getSprite());
	}
};
